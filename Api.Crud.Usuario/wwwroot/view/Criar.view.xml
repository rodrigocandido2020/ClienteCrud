<mvc:View
    controllerName="sap.ui.demo.walkthrough.controller.Painel"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout">
	<Page
		title="{i18n>detailPageTitle}">
        <FlexBox
				height="100px"
				alignItems="Start"
				justifyContent="Center">
            <Button text="{i18n>salvar}" type="Accept" class="sapUiSmallMarginEnd" />
            <Button text="{i18n>voltar}" press="onNavBack" type="Emphasized" class="sapUiSmallMarginEnd" />
        </FlexBox>

        <l:VerticalLayout class="sapUiContentPadding" width="50%">
            <Label  text="{i18n>nome} (obrigatório)" labelFor="input-nome" />
            <Input id="input-nome" placeholder="Digitar Nome Completo" required="true" />

            <Label text="{i18n>senha} (obrigatório)" labelFor="input-senha" />
            <Input id="input-senha" type="Password" placeholder="Digitar Senhar" required="true" />

            <Label text="{i18n>email} (obrigatório)" labelFor="emailInput"/>
            <Input
                id="emailInput"
                class="sapUiSmallMarginBottom"
                type="Email"
                placeholder="Digitar E-mail"
                valueStateText="O campo e-mail deve ser um endereço de e-mail válido."
                value="{
                    path: '/email',
                    type: '.customEMailType'
                }"
                required="true"  />

        <Label text="{i18n>dataNascimento}"/>
     	<DatePicker id="DP3" displayFormat="short" change="handleChange" class="sapUiSmallMarginBottom"/>
        </l:VerticalLayout>            
    </Page>
</mvc:View>