<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.Painel"
	height="20%"
			xmlns:mvc="sap.ui.core.mvc"
			xmlns:core="sap.ui.core"
			xmlns="sap.m">
			<FlexBox
				height="100px"
				alignItems="Start"
				justifyContent="Center">
				<ToggleButton text="{i18n>criarBotao}"  press="onPress" icon="sap-icon://create" class="sapUiSmallMarginEnd"/>
				<Button text="{i18n>editarBotao}" type="Emphasized" class="sapUiSmallMarginEnd" />
				<Button text="{i18n>excluirBotao}" press="testeFuncao" type="Reject" class="sapUiSmallMarginEnd" />
				<Button text="{i18n>listarBotao}" type="Accept" />
			</FlexBox>
			<Table
			id="invoiceList"
			class="sapUiResponsiveMargin"
			width="auto"
			items="{
				path : 'listaDeUsuarios>/',
				sorter : {
					path : '',
					group : true
				}
			}">
				<columns>
					<Column>
						<Text text="id"/>
					</Column>
					<Column>
						<Text text="nome"/>
					</Column>
					<Column>
						<Text text="email"/>
					</Column>
					<Column>
						<Text text="dataNascimento"/>
					</Column>
					<Column>
						<Text text="dataCriacao"/>
					</Column>				
				</columns>
				<items>
					<ColumnListItem
						type="Navigation"
						press=".onPress">
						<cells>
							<ObjectIdentifier title="{listaDeUsuarios>id}"/>
							<Text text="{listaDeUsuarios>nome}"/>
							<Text text="{listaDeUsuarios>email}"/>
							<Text text="{listaDeUsuarios>dataNascimento}"/>
							<Text text="{listaDeUsuarios>dataCriacao}"/>
						</cells>
					</ColumnListItem>
				</items>
		</Table>
</mvc:View>