<mvc:View controllerName="sap.ui.demo.walkthrough.controller.Lista"
	height="100%"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">

	<Page title="{i18n>tituloPagina}">
		<content>
			<FlexBox height="100px" alignItems="Start" justifyContent="Center">
				<Button type="Ghost" text="{i18n>criarBotao}" press="telaCriarUsuario" ariaDescribedBy="acceptButtonDescription genericButtonDescription">
				</Button>
			</FlexBox>
			<Table itemPress="atualizarUsuario" id="invoiceList" class="sapUiResponsiveMargin" width="auto" items="{
				path : 'listaDeUsuarios>/',
				sorter : {
					path : '',
					group : true
				}
			}">
				<columns>
					<Column>
						<Text text="id"/>
					</Column>
					<Column>
						<Text text="nome"/>
					</Column>
					<Column>
						<Text text="email"/>
					</Column>
					<Column>
						<Text text="dataNascimento"/>
					</Column>
					<Column>
						<Text text="dataCriacao"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem type="Navigation">
						<cells>
							<ObjectIdentifier title="{listaDeUsuarios>id}"/>
							<Text text="{listaDeUsuarios>nome}" />
							<Text text="{listaDeUsuarios>email}"/>
							<Text text="{listaDeUsuarios>dataNascimento}" />
							<Text text="{listaDeUsuarios>dataCriacao}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>